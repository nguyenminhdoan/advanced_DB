<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | HR Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-users"></i> HR Management System
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/employees"><i class="fas fa-user-tie"></i> Employees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/departments"><i class="fas fa-building"></i> Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/leaves"><i class="fas fa-calendar-alt"></i> Leave Requests</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/performance"><i class="fas fa-chart-line"></i> Performance</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-file-alt"></i> Reports
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/performance/top-performers">Top Performers</a></li>
                            <li><a class="dropdown-item" href="/reports/audit">Audit Log</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <!-- Flash Messages -->
        <% if (typeof session !== 'undefined' && session.message) { %>
            <div class="alert alert-<%= session.message.type === 'error' ? 'danger' : session.message.type %> alert-dismissible fade show">
                <%= session.message.text %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% delete session.message; %>
        <% } %>

        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2">
                    <i class="fas fa-user"></i> <%= employee.FNAME %> <%= employee.LNAME %>
                </h1>
                <p class="text-muted">Employee ID: <strong><%= employee.EMP_ID %></strong></p>
            </div>
            <div>
                <a href="/employees" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Employees
                </a>
            </div>
        </div>

        <!-- Employee Information -->
        <div class="row">
            <!-- Basic Information -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-user-circle"></i> Employee Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Name:</dt>
                                    <dd class="col-sm-8"><%= employee.FNAME %> <%= employee.LNAME %></dd>
                                    
                                    <dt class="col-sm-4">Email:</dt>
                                    <dd class="col-sm-8">
                                        <a href="mailto:<%= employee.EMAIL %>"><%= employee.EMAIL %></a>
                                    </dd>
                                    
                                    <dt class="col-sm-4">Phone:</dt>
                                    <dd class="col-sm-8"><%= employee.PHONE || 'Not provided' %></dd>
                                    
                                    <dt class="col-sm-4">Hire Date:</dt>
                                    <dd class="col-sm-8"><%= new Date(employee.HIRE_DATE).toLocaleDateString() %></dd>
                                    
                                    <% if (employee.END_DATE) { %>
                                        <dt class="col-sm-4">End Date:</dt>
                                        <dd class="col-sm-8"><%= new Date(employee.END_DATE).toLocaleDateString() %></dd>
                                    <% } %>
                                </dl>
                            </div>
                            
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Position:</dt>
                                    <dd class="col-sm-8"><%= employee.POSITION_TITLE %></dd>
                                    
                                    <dt class="col-sm-4">Department:</dt>
                                    <dd class="col-sm-8"><%= employee.DP_NAME %></dd>
                                    
                                    <dt class="col-sm-4">Salary:</dt>
                                    <dd class="col-sm-8">$<%= employee.SALARY ? employee.SALARY.toLocaleString() : 'N/A' %></dd>
                                    
                                    <dt class="col-sm-4">Supervisor:</dt>
                                    <dd class="col-sm-8"><%= employee.SUPERVISOR_NAME || 'None' %></dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Calculated Information using PL/SQL Functions -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-calculator"></i> Calculated Information</h5>
                        <small class="text-muted">Values calculated using PL/SQL functions</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-clock fa-2x text-primary mb-2"></i>
                                        <h4 class="mb-1"><%= tenure %> years</h4>
                                        <small class="text-muted">Tenure (using get_employee_tenure function)</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-calendar-alt fa-2x text-success mb-2"></i>
                                        <h4 class="mb-1"><%= leaveBalance %> days</h4>
                                        <small class="text-muted">Leave Balance (using package function)</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Statistics & Actions -->
            <div class="col-md-4">
                <!-- Quick Stats -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Quick Stats</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Employee ID:</span>
                            <strong><%= employee.EMP_ID %></strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Department:</span>
                            <span class="badge bg-primary"><%= employee.DP_NAME %></span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tenure:</span>
                            <strong><%= tenure %> years</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Leave Balance:</span>
                            <strong><%= leaveBalance %> days</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Status:</span>
                            <span class="badge bg-success">Active</span>
                        </div>
                    </div>
                </div>
                
                <!-- Actions -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-cogs"></i> Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary btn-sm" disabled>
                                <i class="fas fa-edit"></i> Edit Employee
                            </button>
                            <button class="btn btn-outline-info btn-sm" disabled>
                                <i class="fas fa-calendar-plus"></i> Add Leave Request
                            </button>
                            <button class="btn btn-outline-success btn-sm" disabled>
                                <i class="fas fa-star"></i> Add Performance Review
                            </button>
                            <button class="btn btn-outline-warning btn-sm" disabled>
                                <i class="fas fa-clock"></i> View History
                            </button>
                        </div>
                        <small class="text-muted mt-2 d-block">
                            <i class="fas fa-info-circle"></i> Additional features coming soon
                        </small>
                    </div>
                </div>
                
                <!-- Function Details -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-database"></i> PL/SQL Functions Used</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled small">
                            <li class="mb-2">
                                <i class="fas fa-code text-primary"></i>
                                <strong>get_employee_tenure(<%= employee.EMP_ID %>)</strong><br>
                                <span class="text-muted">Calculates years of service</span>
                            </li>
                            <li>
                                <i class="fas fa-code text-success"></i>
                                <strong>hr_management_pkg.calculate_annual_leave_balance(<%= employee.EMP_ID %>)</strong><br>
                                <span class="text-muted">Calculates remaining leave days</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Employment Timeline -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-timeline"></i> Employment Timeline</h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Hired</h6>
                                    <p class="mb-1">Started as <%= employee.POSITION_TITLE %> in <%= employee.DP_NAME %></p>
                                    <small class="text-muted"><%= new Date(employee.HIRE_DATE).toLocaleDateString() %></small>
                                </div>
                            </div>
                            
                            <div class="timeline-item">
                                <div class="timeline-marker bg-primary"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Current Status</h6>
                                    <p class="mb-1">Active employee with <%= tenure %> years of service</p>
                                    <small class="text-muted">Present</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="mb-0 text-muted">&copy; 2024 HR Management System - COMP214 Database Project</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/script.js"></script>
</body>
</html>