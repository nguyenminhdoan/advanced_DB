<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | HR Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-users"></i> HR Management System
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/employees"><i class="fas fa-user-tie"></i> Employees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/departments"><i class="fas fa-building"></i> Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/leaves"><i class="fas fa-calendar-alt"></i> Leave Requests</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/performance"><i class="fas fa-chart-line"></i> Performance</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-file-alt"></i> Reports
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/performance/top-performers">Top Performers</a></li>
                            <li><a class="dropdown-item" href="/reports/audit">Audit Log</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <!-- Flash Messages -->
        <% if (typeof session !== 'undefined' && session.message) { %>
            <div class="alert alert-<%= session.message.type === 'error' ? 'danger' : session.message.type %> alert-dismissible fade show">
                <%= session.message.text %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% delete session.message; %>
        <% } %>

        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2"><i class="fas fa-trophy"></i> Top Performers</h1>
                <p class="text-muted">Highest performing employees based on performance reviews</p>
            </div>
            <div>
                <a href="/performance" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Reviews
                </a>
            </div>
        </div>

        <!-- Filter Form -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-filter"></i> Filter Top Performers</h6>
            </div>
            <div class="card-body">
                <form method="GET" action="/performance/top-performers" class="row g-3">
                    <div class="col-md-4">
                        <label for="dept_id" class="form-label">Department</label>
                        <select class="form-select" id="dept_id" name="dept_id">
                            <option value="">All Departments</option>
                            <% departments.forEach(dept => { %>
                                <option value="<%= dept.DP_ID %>" <%= selectedDept == dept.DP_ID ? 'selected' : '' %>>
                                    <%= dept.DP_NAME %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="limit" class="form-label">Number of Results</label>
                        <select class="form-select" id="limit" name="limit">
                            <option value="5" <%= selectedLimit == '5' ? 'selected' : '' %>>Top 5</option>
                            <option value="10" <%= selectedLimit == '10' ? 'selected' : '' %>>Top 10</option>
                            <option value="15" <%= selectedLimit == '15' ? 'selected' : '' %>>Top 15</option>
                            <option value="20" <%= selectedLimit == '20' ? 'selected' : '' %>>Top 20</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary d-block">
                            <i class="fas fa-search"></i> Filter Results
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Top Performers -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-star"></i> Top Performers
                    <% if (selectedDept) { %>
                        <span class="badge bg-primary ms-2">
                            <%= departments.find(d => d.DP_ID == selectedDept)?.DP_NAME || 'Selected Department' %>
                        </span>
                    <% } %>
                </h5>
            </div>
            <div class="card-body">
                <% if (performers.length === 0) { %>
                    <div class="text-center py-4">
                        <i class="fas fa-trophy fa-3x text-muted mb-3"></i>
                        <h5>No Performance Data</h5>
                        <p class="text-muted">No performance reviews found for the selected criteria.</p>
                        <a href="/performance" class="btn btn-primary">View All Reviews</a>
                    </div>
                <% } else { %>
                    <!-- Podium Display for Top 3 -->
                    <% if (performers.length >= 3) { %>
                        <div class="row mb-5">
                            <div class="col-12">
                                <div class="d-flex justify-content-center align-items-end" style="height: 300px;">
                                    <!-- 2nd Place -->
                                    <div class="text-center me-4" style="margin-bottom: 50px;">
                                        <div class="card border-secondary" style="width: 180px;">
                                            <div class="card-body text-center">
                                                <i class="fas fa-medal fa-2x text-secondary mb-2"></i>
                                                <h6 class="card-title"><%= performers[1].FULL_NAME %></h6>
                                                <p class="card-text small"><%= performers[1].POSITION_TITLE %></p>
                                                <h4 class="text-secondary"><%= performers[1].AVG_SCORE.toFixed(1) %>/10</h4>
                                                <span class="badge bg-secondary">2nd Place</span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- 1st Place -->
                                    <div class="text-center me-4">
                                        <div class="card border-warning" style="width: 200px;">
                                            <div class="card-body text-center">
                                                <i class="fas fa-crown fa-2x text-warning mb-2"></i>
                                                <h5 class="card-title"><%= performers[0].FULL_NAME %></h5>
                                                <p class="card-text small"><%= performers[0].POSITION_TITLE %></p>
                                                <h3 class="text-warning"><%= performers[0].AVG_SCORE.toFixed(1) %>/10</h3>
                                                <span class="badge bg-warning text-dark">üèÜ Champion</span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- 3rd Place -->
                                    <div class="text-center" style="margin-bottom: 100px;">
                                        <div class="card border-info" style="width: 160px;">
                                            <div class="card-body text-center">
                                                <i class="fas fa-award fa-2x text-info mb-2"></i>
                                                <h6 class="card-title small"><%= performers[2].FULL_NAME %></h6>
                                                <p class="card-text small"><%= performers[2].POSITION_TITLE %></p>
                                                <h5 class="text-info"><%= performers[2].AVG_SCORE.toFixed(1) %>/10</h5>
                                                <span class="badge bg-info">3rd Place</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- Complete Rankings Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Rank</th>
                                    <th>Employee</th>
                                    <th>Position</th>
                                    <th>Salary</th>
                                    <th>Tenure</th>
                                    <th>Average Score</th>
                                    <th>Performance Level</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% performers.forEach((performer, index) => { %>
                                    <tr class="<%= index < 3 ? 'table-warning' : '' %>">
                                        <td>
                                            <% if (index === 0) { %>
                                                <span class="badge bg-warning text-dark fs-6">ü•á 1st</span>
                                            <% } else if (index === 1) { %>
                                                <span class="badge bg-secondary fs-6">ü•à 2nd</span>
                                            <% } else if (index === 2) { %>
                                                <span class="badge bg-info fs-6">ü•â 3rd</span>
                                            <% } else { %>
                                                <strong><%= index + 1 %></strong>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/employees/<%= performer.EMP_ID %>" class="text-decoration-none">
                                                <strong><%= performer.FULL_NAME %></strong>
                                            </a>
                                            <% if (index < 3) { %>
                                                <i class="fas fa-star text-warning ms-1"></i>
                                            <% } %>
                                        </td>
                                        <td><%= performer.POSITION_TITLE %></td>
                                        <td class="text-success">
                                            <strong>$<%= performer.SALARY.toLocaleString() %></strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info"><%= performer.TENURE %> years</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <strong class="text-<%= performer.AVG_SCORE >= 9 ? 'success' : performer.AVG_SCORE >= 8 ? 'primary' : performer.AVG_SCORE >= 7 ? 'warning' : 'danger' %> me-2">
                                                    <%= performer.AVG_SCORE.toFixed(1) %>/10
                                                </strong>
                                                <div class="progress" style="width: 60px; height: 6px;">
                                                    <div class="progress-bar bg-<%= performer.AVG_SCORE >= 9 ? 'success' : performer.AVG_SCORE >= 8 ? 'primary' : performer.AVG_SCORE >= 7 ? 'warning' : 'danger' %>" 
                                                         style="width: <%= (performer.AVG_SCORE / 10) * 100 %>%"></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (performer.AVG_SCORE >= 9) { %>
                                                <span class="badge bg-success">Exceptional</span>
                                            <% } else if (performer.AVG_SCORE >= 8) { %>
                                                <span class="badge bg-primary">Excellent</span>
                                            <% } else if (performer.AVG_SCORE >= 7) { %>
                                                <span class="badge bg-warning">Good</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Average</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/employees/<%= performer.EMP_ID %>" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Performance Statistics -->
                    <div class="row mt-4">
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h4 class="mb-1 text-primary"><%= performers.length %></h4>
                                    <small class="text-muted">Total Performers</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <% 
                                    const avgScore = performers.length > 0 ? 
                                        (performers.reduce((sum, p) => sum + p.AVG_SCORE, 0) / performers.length).toFixed(1) : 0;
                                    %>
                                    <h4 class="mb-1 text-success"><%= avgScore %>/10</h4>
                                    <small class="text-muted">Average Score</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <% const topScore = performers.length > 0 ? performers[0].AVG_SCORE.toFixed(1) : 0; %>
                                    <h4 class="mb-1 text-warning"><%= topScore %>/10</h4>
                                    <small class="text-muted">Highest Score</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <% const exceptional = performers.filter(p => p.AVG_SCORE >= 9).length; %>
                                    <h4 class="mb-1 text-info"><%= exceptional %></h4>
                                    <small class="text-muted">Exceptional (9+)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

    </div>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="mb-0 text-muted">&copy; 2024 HR Management System - COMP214 Database Project</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/script.js"></script>
</body>
</html>